pragma solidity 0.5.1;

contract CPD_MGMT {

uint256 private ID;
uint256 private units;
mapping(uint => Teacher) public teacher;

address owner;

modifier onlyOwner(){
    
    require(msg.sender == owner);
    _;
}

struct Teacher {
uint PRC_id;
string _firstname;
string _lastname;
uint _PRCunits;
}

constructor() public {
  owner = msg.sender;
}

function Register(uint PRC_id, string memory _firstname, string memory _lastname) public onlyOwner {
ID = PRC_id;
units = 0;
teacher[ID] = Teacher(ID, _firstname, _lastname, units);
}


}
